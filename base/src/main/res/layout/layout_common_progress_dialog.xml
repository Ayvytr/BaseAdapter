<?xml version="1.0" encoding="utf-8"?><!--进度条-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_progress_bar_bg"
    >

    <FrameLayout
        android:id="@+id/fl_progress"
        android:layout_width="?attr/commonProgressDialogProgressContainerWidth"
        android:layout_height="?attr/commonProgressDialogProgressContainerWidth"
        android:layout_centerHorizontal="true"
        >

        <ProgressBar
            android:id="@+id/pd_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="?attr/commonProgressDialogProgressDrawable"
            android:indeterminateDuration="1000"
            android:indeterminateOnly="true"
            android:layout_gravity="center"
            android:maxHeight="?attr/commonProgressDialogProgressWidth"
            android:maxWidth="?attr/commonProgressDialogProgressWidth"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_progress"
        android:layout_centerHorizontal="true"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:paddingBottom="?attr/commonProgressDialogBottomSpace"
        android:textColor="#FFFFFF"
        android:textSize="?attr/commonProgressDialogTextSize"
        android:visibility="gone" />

</RelativeLayout>
